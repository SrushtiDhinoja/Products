<h1>Product Category Headings</h1>
<select class="form-control col-sm-2"  id="first">
  <option value="">---Select---</option>
  <option value="heading">Product Category Heading</option>
  <option value="category">Product Category</option>
</select>
<br>
  <%= select_tag 'product', options_for_select(@product_category_headings.collect{ |h| h.category_heading }), class: "form-control col-sm-2"%>
  <div id="product-list"></div>
<br>
<%= link_to 'Add Heading', new_product_category_heading_path , class: "btn btn-primary"%>
<br>

<table>
  <thead>
    <tr>
      <th>Product Category Heading</th>
      <th>&nbsp; &nbsp;</th>
      <th>Product Categories</th>
      <th>&nbsp;&nbsp;</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_category_headings.each do |heading| %>
      <tr>
        <td><%= heading.category_heading %></td>
        <td>&nbsp;&nbsp;</td>
        <td>
          <% heading&.product_categories&.each do |category| %>
            <%= link_to "#{category.cname}" , product_category_heading_product_category_path(heading, category) %>, 
          <% end %>
        </td>
        <td>&nbsp;&nbsp;</td>
        <td><%= link_to 'Edit', edit_product_category_heading_path(heading) , class: "btn btn-secondary"%></td>
        <td>&nbsp;</td>
        <td><%= link_to 'Destroy', heading, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

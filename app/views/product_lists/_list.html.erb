<table>
  <thead>
    <tr>
      <th>Products</th>
      <th>&nbsp; &nbsp;</th>
      <th>Product Categories</th>
      <th>&nbsp;&nbsp;</th>
      <th>Product Category Heading</th>
    </tr>
  </thead>

  <tbody>
    <% @product_lists.each do |product| %>
      <tr>
        <td><%= product.product_name %></td>
        <td>&nbsp;&nbsp;</td>
        <td><%= product.product_category %></td>
        <td>&nbsp;&nbsp;</td>
        <td><%= @product_category_heading%></td>
        <td>&nbsp;</td>
        <td><%= link_to 'Destroy', heading, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>